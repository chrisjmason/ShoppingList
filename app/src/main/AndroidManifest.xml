<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharedshopping.chris.shoppinglist">

    <application
        android:name = "utility.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="itemsoverview.ItemOverviewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="itemdetail.ItemDetailActivity"></activity>
        <activity android:name="itemadd.ItemAddActivity"
            android:windowSoftInputMode="adjustResize">

        </activity>
    </application>

</manifest>